@model WebApplication6.Models.Film

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row mt-3">
    <div class="col-sm-3 text-center h6">
        レンタル期間<br />RentalDuration
    </div>
    <div class="col-sm-3 text-center">
        @Html.DisplayFor(model => model.rental_duration) 日
    </div>
    <div class="col-sm-3 text-center h6">
        映画の長さ<br />
        @Html.DisplayNameFor(model => model.title)
    </div>
    <div class="col-sm-3 text-center">
        @Html.DisplayFor(model => model.length) 時間
    </div>
</div>
<div class="row mt-3">
    <div class="col-sm-3 text-center h6">
        価格<br />cost
    </div>
    <div class="col-sm-3 text-center">
        @Html.DisplayFor(model => model.replacement_cost)
    </div>
    <div class="col-sm-3 text-center h6">
        内容<br />
        @Html.DisplayNameFor(model => model.fulltext)
    </div>
    <div class="col-sm-3 text-center">
        @Html.DisplayFor(model => model.fulltext)
    </div>
</div>
<div class="row mt-3">
    <div class="col-sm-6">
    </div>
    <div class="col-sm-6">
        <div class="row">
            <div class="col-sm-6">
                <button class="btn btn-primary">Start</button>
            </div>
            <div class="col-sm-6">
                <button class="btn btn-primary"  data-toggle="modal" data-target="#modalDetailsIchijiTeishi">一時停止</button>
            </div>
            <div class="col-sm-6">
                @Html.ActionLink("作業確定", "Complete", new { id = Model.id }, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>

<!-- Modal -->
<div class="modal fade" id="modalDetailsIchijiTeishi" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <select class="form-select" aria-label="Default select example" id="ichijiTeishi">
                        <option selected>Open this select menu</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                        <option value="999">OTher</option>
                    </select>
                    <div class="otherTextArea">
                        <div class="form-group">
                            <label>一時停止理由</label>
                            <input type="text" class="form-control" id="otherText" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>
                        Choose a browser from this list:
                        <input list="browsers" name="myBrowser" class="form-control"/>
                    </label>
                    <datalist id="browsers">
                        <option value="Chrome">
                        <option value="Firefox">
                        <option value="Internet Explorer">
                        <option value="Opera">
                        <option value="Safari">
                        <option value="Microsoft Edge">
                    </datalist>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="set" data-dismiss="modal">バーコード読み取り後に、変更</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $(".otherTextArea").hide();

        $('#ichijiTeishi').change(function () {
            var str = $(this).val();
            console.log(str);

            if (str === '999') {
                $(".otherTextArea").show();
            } else {
                $(".otherTextArea").hide();
            }
        });
    });
</script>